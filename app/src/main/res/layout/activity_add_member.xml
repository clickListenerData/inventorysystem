<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_bg">

    <include layout="@layout/view_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_14"
        android:background="@drawable/shape_white_r6"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginHorizontal="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:paddingVertical="@dimen/dp_14"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_15"
            android:text="@string/partner_id"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:textSize="@dimen/txt_13"
            android:textColorHint="@color/text_edit_hint"
            android:hint="@string/single_input"/>
        <com.coorchice.library.SuperTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:padding="@dimen/dp_4"
            app:stv_solid="@color/txt_out"
            app:stv_corner="@dimen/dp_4"
            android:textSize="@dimen/txt_13"
            android:textColor="@color/text_color_white"
            android:text="@string/sure"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_r6"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginHorizontal="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/color666666"
            android:text="@string/invitation_member"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            />
    </LinearLayout>

</LinearLayout>