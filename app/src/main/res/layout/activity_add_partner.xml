<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color_bg"
    tools:context=".ui.partnership.AddPartnerActivity">
    <include layout="@layout/view_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_white_r6"
        android:layout_margin="@dimen/dp_14"
        android:padding="@dimen/dp_14"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/partner_id"
            android:gravity="center"
            android:textSize="@dimen/txt_15"
            android:textColor="@color/title_color"/>
        <EditText
            android:id="@+id/et_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_14"
            android:hint="@string/single_input"
            android:textSize="@dimen/txt_13"
            android:textColorHint="@color/text_edit_hint"
            android:padding="6dp"
            android:textColor="@color/color_333"/>
        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sure"
            android:gravity="center"
            android:textSize="@dimen/txt_13"
            android:textColor="@color/text_color_white"
            android:layout_marginLeft="@dimen/dp_14"
            app:stv_solid="@color/txt_out"
            app:stv_corner="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            />
    </LinearLayout>

</LinearLayout>