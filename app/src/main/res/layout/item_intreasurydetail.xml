<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_r6"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/dp_14"
    android:layout_marginTop="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_14">
        <ImageView
            android:id="@+id/iv_hand"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:src="@drawable/image"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_toRightOf="@+id/iv_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASL1233456"
                android:layout_marginTop="3dp"
                android:textColor="@color/title_color"
                android:textSize="@dimen/txt_15"
                />
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X/XL"
                android:layout_marginTop="3dp"
                android:textColor="@color/color666666"
                android:textSize="@dimen/txt_13"
                />
            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红"
                android:layout_marginTop="3dp"
                android:textColor="@color/color666666"
                android:textSize="@dimen/txt_13"
                />
            <TextView
                android:id="@+id/tv_liang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已关联1223"
                android:layout_marginTop="3dp"
                android:textColor="@color/txt_out"
                android:textSize="@dimen/txt_11"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/ll_left"
            android:layout_marginRight="@dimen/dp_14"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_marginHorizontal="@dimen/dp_14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color666666"
            android:textSize="@dimen/txt_11"
            android:text="2018-11-20 12:09"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_15"
            android:text="总计"
            android:layout_marginRight="@dimen/dp_4"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_17"
            android:textColor="#E72639"
            android:text="￥10000"
            android:layout_marginRight="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tv_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_15"
            android:text="总计100000元"
            android:layout_marginRight="@dimen/dp_14"/>

    </LinearLayout>

</LinearLayout>