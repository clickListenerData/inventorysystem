<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_bg">

    <include layout="@layout/view_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/dp_10">
                <ImageView
                    android:id="@+id/iv_color_bg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="#ff0000"
                    android:layout_marginLeft="@dimen/dp_14"
                    />
                <TextView
                    android:id="@+id/tv_color_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/iv_color_bg"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="@id/iv_color_bg"
                    app:layout_constraintBottom_toTopOf="@id/tv_color_id"
                    android:textSize="@dimen/txt_15"
                    android:textColor="@color/title_color"/>
                <TextView
                    android:id="@+id/tv_color_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/tv_color_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_color_name"
                    app:layout_constraintBottom_toBottomOf="@id/iv_color_bg"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/txt_13"/>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical">
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="@string/color_name_txt"
                    app:input_hint_content="@string/color_name_hint"
                    app:input_size="13"
                    app:input_enable="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/txt_11"
                    android:textColor="@color/txt_price"
                    android:text="@string/create_add_color_id"
                    android:layout_marginTop="@dimen/dp_10"/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:title_content="@string/color_id_txt"
                    app:input_hint_content="@string/color_id_hint"
                    app:input_size="13"
                    app:input_enable="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/txt_11"
                    android:textColor="@color/txt_price"
                    android:text="@string/create_add_color_rgb"/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:title_content="R"
                    app:input_hint_content="@string/r_hint"
                    app:input_enable="true"
                    app:input_size="13"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="G"
                    app:input_hint_content="@string/g_hint"
                    app:input_enable="true"
                    app:input_size="13"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="B"
                    app:input_hint_content="@string/b_hint"
                    app:input_enable="true"
                    app:input_size="13"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="@string/alpha_color_txt"
                    app:input_hint_content="100"
                    app:input_enable="true"
                    app:input_color="@color/title_color"
                    app:input_hint_color="@color/title_color"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/txt_15"
                    android:textColor="@color/title_color"
                    android:text="@string/color_template_txt"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/text_color_white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>