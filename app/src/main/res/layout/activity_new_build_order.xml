<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color_bg"
    tools:context=".ui.home.NewBuildOrderActivity">
    <include layout="@layout/view_title"
        android:id="@+id/ic_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_add_goods"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/title_color"
                android:text="@string/select_shop"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_addtoto_n"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_14"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/tv_add_shop"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="@dimen/txt_15"
                    android:text="@string/ruku_shops"
                    android:textColor="@color/color666666"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_towardstheright_n"
                    android:paddingHorizontal="@dimen/dp_14"
                    android:background="@drawable/shape_white_r6"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/title_color"
                android:text="@string/select_customer"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/shape_white_r6">
                <ImageView
                    android:id="@+id/iv_hand"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/image"
                    android:layout_margin="@dimen/dp_14"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_15"
                    android:textColor="@color/title_color"
                    android:text="优衣库"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_hand"
                    android:layout_marginTop="@dimen/dp_14"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_13"
                    android:textColor="@color/color666666"
                    android:text="13066230849"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_toRightOf="@+id/iv_hand"/>
                <TextView
                    android:id="@+id/tv_add_kehu"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="14sp"
                    android:text="@string/ruku_shops"
                    android:textColor="@color/color666666"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/txt_15"
                    android:background="@drawable/shape_white_r6"
                    android:drawableRight="@drawable/ic_towardstheright_n"
                    android:paddingRight="@dimen/dp_14"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/title_color"
                android:text="@string/select_order"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_10"
                android:background="@drawable/shape_white_r6">
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="@string/shuidian"
                    app:input_content=""/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="@string/fujiafeiyong"
                    app:input_content=""/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="@string/youhui"
                    app:input_content=""/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_content="@string/beizhu"
                    app:input_content=""/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginHorizontal="@dimen/dp_10"/>
                <com.micropole.inventorysystem.widght.InputMsgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title_color="#E72639"
                    app:title_size="17"
                    app:title_content="¥300"
                    app:input_color="@color/txt_out"
                    app:input_size="15"
                    app:input_content="已入库"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/txt_13"
                        android:text="内涵200元增值税"/>
                    <com.coorchice.library.SuperTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_13"
                        android:textColor="@color/text_color_white"
                        app:stv_solid="#FF9501"
                        app:stv_corner="4dp"
                        android:text="挂起"
                        android:layout_marginRight="@dimen/dp_10"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="6dp"
                        android:visibility="gone"/>
                    <com.coorchice.library.SuperTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_13"
                        android:textColor="@color/text_color_white"
                        app:stv_solid="@color/txt_out"
                        app:stv_corner="4dp"
                        android:text="下单"
                        android:layout_marginRight="@dimen/dp_10"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="6dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_13"
                        android:textColor="@color/color666666"
                        android:text="@string/now_order"
                        android:layout_marginRight="@dimen/dp_14"/>
                    <TextView
                        android:id="@+id/tv_guaqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_13"
                        android:textColor="@color/color666666"
                        android:text="@string/tuihui"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>