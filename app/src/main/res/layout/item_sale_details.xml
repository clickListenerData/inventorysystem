<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.micropole.inventorysystem.entity.ColorBean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_sale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/color666666"
            android:text="name"/>
        <TextView
            android:id="@+id/tv_sale_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_sale_name"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/color666666"
            android:text="id"/>
        <TextView
            android:id="@+id/tv_sale_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/color666666"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sale_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_sale_id"
            android:text="12"/>
        <TextView
            android:id="@+id/tv_sale_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sale_name"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/color666666"
            android:text="2018"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sale_time"
            android:layout_marginRight="@dimen/dp_4"
            android:text="100"/>
    </android.support.constraint.ConstraintLayout>
</layout>