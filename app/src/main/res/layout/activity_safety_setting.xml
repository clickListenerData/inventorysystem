<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_bg"
    android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <com.micropole.inventorysystem.widght.NormalLlView
        android:id="@+id/nll_safety_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:main_txt_content="@string/safety_pwd_setting"
        app:main_drawable="@android:drawable/ic_menu_manage"
        app:custom_txt_content=""/>
    <com.micropole.inventorysystem.widght.NormalLlView
        android:id="@+id/nll_safety_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:main_txt_content="@string/safety_phone_setting"
        app:main_drawable="@android:drawable/ic_menu_manage"
        app:custom_txt_content=""/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_manage"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_4"
            android:text="@string/safety_auto_login"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/color666666"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            />
    </FrameLayout>

</LinearLayout>