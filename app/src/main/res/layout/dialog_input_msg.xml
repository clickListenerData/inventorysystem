<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    android:background="@color/text_color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_17"
            android:layout_gravity="center_horizontal"
            android:text="添加新"
            android:layout_marginTop="@dimen/dp_14"/>
        <TextView
            android:id="@+id/tv_input_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_13"
            android:layout_gravity="center_horizontal"
            android:text="添加新" />
        <EditText
            android:id="@+id/et_input_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_gray_r5"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:textSize="@dimen/txt_13"
            android:textColorHint="#C7C7CC"
            android:textColor="#C7C7CC"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginTop="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/txt_out"
                android:textSize="@dimen/txt_17"
                android:text="@string/cancel_txt"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>
            <TextView
                android:id="@+id/tv_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/txt_out"
                android:textSize="@dimen/txt_17"
                android:text="@string/cancel_txt"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>