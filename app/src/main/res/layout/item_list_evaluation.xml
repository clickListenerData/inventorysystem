<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_14"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@color/txt_out"/>
    <TextView
        android:id="@+id/tv_e_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/civ_head_img"
        app:layout_constraintBottom_toBottomOf="@id/civ_head_img"
        app:layout_constraintLeft_toRightOf="@id/civ_head_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/txt_13"
        android:textColor="#1A1A1A"
        android:text="@string/name"/>
    <TextView
        android:id="@+id/tv_e_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_e_name"
        android:textColor="@color/text_edit_hint"
        android:textSize="@dimen/txt_11"
        android:text="num"/>
    <TextView
        android:id="@+id/tv_e_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_e_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_e_name"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:textColor="#1A1A1A"
        android:textSize="@dimen/txt_11"
        android:text="des"
        />
    <com.micropole.baseapplibrary.widght.ShowImgView
        android:id="@+id/siv_imgs"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_e_des"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_10"/>
</android.support.constraint.ConstraintLayout>