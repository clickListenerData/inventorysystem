<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_color_bg">
    <include  layout="@layout/view_title"/>
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_white_gray_r5"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:hint="@string/zi"
        android:textSize="@dimen/txt_15"
        android:padding="6dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_10"
        android:drawableLeft="@drawable/global_ic_input_search"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@drawable/global_btn_input_del"
        android:textColor="@color/color_333"
        android:textColorHint="@color/text_edit_hint"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最新创建"
            android:textSize="@dimen/txt_11"
            android:textColor="@color/txt_out"/>
        <TextView
            android:id="@+id/tv_jiaoyi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="交易额"
            android:textSize="@dimen/txt_11"
            android:textColor="@color/color666666"/>
        <TextView
            android:id="@+id/tv_qian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="欠款金额"
            android:textSize="@dimen/txt_11"
            android:textColor="@color/color666666"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="次数"
            android:textSize="@dimen/txt_11"
            android:textColor="@color/color666666"/>
        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_tyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商"
            android:textSize="@dimen/txt_13"
            android:textColor="@color/text_color_white"
            android:padding="6dp"
            app:stv_solid="@color/txt_out"
            app:stv_corner="4dp"
            android:gravity="center"
            android:drawableRight="@drawable/ic_towardstheright_n"/>
        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_daochu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出"
            android:textSize="@dimen/txt_13"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color_white"
            android:paddingVertical="@dimen/dp_4"
            android:paddingHorizontal="@dimen/dp_10"
            android:background="@drawable/login_code"
            app:stv_solid="#FF9501"
            app:stv_corner="4dp"
            />
    </LinearLayout>
    <com.micropole.baseapplibrary.widght.RefreshRecyclerView
        android:id="@+id/rrv_partner_ship"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"/>


</LinearLayout>