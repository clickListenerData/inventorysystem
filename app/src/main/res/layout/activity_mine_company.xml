<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/view_not_company"
            layout="@layout/view_not_company"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/app_color_bg"
                android:paddingBottom="@dimen/dp_14">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/white"
                    android:paddingVertical="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_14">
                    <ImageView
                        android:id="@+id/iv_company_img"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:src="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/tv_company_fzr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/iv_company_img"
                        android:layout_marginLeft="@dimen/dp_10"
                        app:layout_constraintTop_toTopOf="@id/iv_company_img"
                        app:layout_constraintBottom_toTopOf="@id/tv_company_id"
                        android:textSize="@dimen/main_txt_size"
                        android:textColor="@color/color666666"
                        android:text="优衣库"/>
                    <TextView
                        android:id="@+id/tv_company_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_company_fzr"
                        app:layout_constraintTop_toBottomOf="@id/tv_company_fzr"
                        app:layout_constraintBottom_toTopOf="@id/tv_company_name"
                        android:textSize="@dimen/main_txt_size"
                        android:textColor="@color/color666666"
                        android:text="优衣库"/>

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_company_fzr"
                        app:layout_constraintTop_toBottomOf="@id/tv_company_id"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="@dimen/main_txt_size"
                        android:textColor="@color/color666666"
                        android:text="优衣库"/>

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/main_txt_size"
                    android:textColor="@color/color666666"
                    android:text="@string/company_message"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/shape_line_drawable"
                    android:showDividers="middle"
                    android:layout_marginTop="@dimen/dp_10">
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_head"
                        app:input_content="kevin"/>

                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_phone"
                        app:input_content="1888888888"/>
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_email"
                        app:input_content="123456@163.com"/>
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_industry"
                        app:input_content="aa"/>
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_country"
                        app:input_content="中国"/>
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_address"
                        app:input_content="光会走"/>
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/company_for_announcement"
                        app:input_content="公告"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_company_look"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textSize="@dimen/main_txt_size"
                    android:textColor="@color/color666666"
                    android:background="@drawable/shape_white_gray_r3"
                    android:text="@string/company_btn_look"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_72"
                    android:layout_marginRight="@dimen/dp_72"/>

                <TextView
                    android:id="@+id/tv_company_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textSize="@dimen/main_txt_size"
                    android:textColor="@color/color666666"
                    android:background="@drawable/shape_white_gray_r3"
                    android:text="@string/company_btn_update"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_72"
                    android:layout_marginRight="@dimen/dp_72"/>

                <TextView
                    android:id="@+id/tv_company_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textSize="@dimen/main_txt_size"
                    android:textColor="@color/color666666"
                    android:background="@drawable/shape_white_gray_r3"
                    android:text="@string/company_btn_leave"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_72"
                    android:layout_marginRight="@dimen/dp_72"/>

                <TextView
                    android:id="@+id/tv_company_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textSize="@dimen/main_txt_size"
                    android:textColor="@color/color666666"
                    android:background="@drawable/shape_white_gray_r3"
                    android:text="@string/company_btn_add"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_72"
                    android:layout_marginRight="@dimen/dp_72"/>

                <TextView
                    android:id="@+id/tv_company_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textSize="@dimen/main_txt_size"
                    android:textColor="@color/color666666"
                    android:background="@drawable/shape_white_gray_r3"
                    android:text="@string/company_btn_transfer"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_72"
                    android:layout_marginRight="@dimen/dp_72"/>

            </LinearLayout>

        </ScrollView>
    </FrameLayout>

</LinearLayout>