<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.micropole.inventorysystem.entity.GoodsBean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_gray_r3"
        android:padding="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10">
        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_txt_size"
            android:textColor="@color/title_color"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/iv_goods_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_goods_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_name"
            android:textSize="@dimen/txt_11"
            android:textColor="@color/color666666"
            android:text="des"
            android:layout_marginTop="@dimen/dp_4"
            />
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/txt_17"
            android:textColor="@color/txt_price"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_des"
            android:text="Â¥ 200"
            />
    </android.support.constraint.ConstraintLayout>

</layout>