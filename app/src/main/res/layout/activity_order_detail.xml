<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#F9F9F9"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_left_arrows"
            android:padding="@dimen/dp_14"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/title_color"
            android:textSize="@dimen/title_txt_size"
            android:text="@string/order_detail_txt"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_news"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/ic_sharea_n"/>
        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/ic_newss_n"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_check_net"/>
        <include layout="@layout/view_error"/>
        <include layout="@layout/view_loading"/>
        <LinearLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/app_color_bg">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@color/text_color_white">
                        <TextView
                            android:id="@+id/tv_stat_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/txt_13"
                            android:textColor="@color/color666666"
                            android:drawableTop="@drawable/ic_pendingpaymet_n"
                            android:text="代付款"
                            android:gravity="center"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="@dimen/dp_14"
                            android:background="@color/line_color"/>
                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="#010101"
                            android:textSize="@dimen/txt_15"
                            android:text="23小时12分钟后自动关闭订单"
                            android:layout_marginLeft="@dimen/dp_14"
                            />
                    </LinearLayout>

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        layout="@layout/view_order_address"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_order_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:background="@color/text_color_white"/>

                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:id="@+id/imv_yunfei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/freight_price"
                        android:layout_marginTop="@dimen/dp_14"
                        app:input_content="20"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_color"
                        android:layout_marginLeft="@dimen/dp_14"/>
                    <com.micropole.inventorysystem.widght.InputMsgView
                        android:id="@+id/imv_youhui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_content="@string/preferential_price"
                        app:input_content="20"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_color"
                        android:layout_marginLeft="@dimen/dp_14"/>
                    <TextView
                        android:id="@+id/tv_detail_remark"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/text_color_white"
                        android:paddingHorizontal="@dimen/dp_14"
                        android:paddingVertical="@dimen/dp_14"
                        android:textSize="@dimen/txt_13"
                        android:textColor="@color/text_edit_hint"
                        android:text="@string/not_remark"/>

                    <TextView
                        android:id="@+id/tv_logsitics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_14"
                        android:paddingLeft="@dimen/dp_14"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/txt_15"
                        android:text="@string/logistics_information"
                        android:visibility="gone"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_logistics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_white"/>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@color/text_color_white"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_15"
                    android:textColor="@color/title_color"
                    android:text="@string/price_count"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_price"
                    android:textSize="@dimen/txt_17"
                    android:layout_marginRight="30dp"
                    android:text="¥ 368"
                    android:layout_gravity="center"/>

                <com.coorchice.library.SuperTextView
                    android:id="@+id/stv_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:stv_solid="@color/text_color_white"
                    app:stv_stroke_color="@color/color666666"
                    app:stv_stroke_width="1dp"
                    android:paddingHorizontal="11dp"
                    android:paddingVertical="8dp"
                    android:text="取消订单"
                    android:layout_marginRight="@dimen/dp_14"
                    android:visibility="gone"
                    />

                <com.coorchice.library.SuperTextView
                    android:id="@+id/stv_btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:stv_solid="@color/text_color_white"
                    app:stv_stroke_color="@color/color666666"
                    app:stv_stroke_width="1dp"
                    android:paddingHorizontal="11dp"
                    android:paddingVertical="8dp"
                    android:text="取消订单"
                    android:layout_marginRight="@dimen/dp_14"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/txt_out"
                    android:textSize="@dimen/txt_15"
                    android:textColor="#FFFEFE"
                    android:text="立即支付"
                    android:gravity="center"
                    android:paddingHorizontal="30dp"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>