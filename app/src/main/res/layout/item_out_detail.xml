<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_input"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_14">
        <ImageView
            android:id="@+id/iv_hand"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image"/>
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_toRightOf="@+id/iv_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASL1233456"
                android:textColor="@color/color_333"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X/XL"
                android:textColor="@color/color666666"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红"
                android:textColor="@color/color666666"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共23件"
                android:textColor="@color/color_333"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_liang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（2箱2件）"
                android:textColor="@color/color666666"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14"
            android:text="2018-11-20 12:09"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14"
            android:text="总计100000元"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14"
            android:text="总计100000元"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>