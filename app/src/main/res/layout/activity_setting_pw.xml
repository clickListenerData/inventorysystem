<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personal.mine.SettingPWActivity"
    android:orientation="vertical">
    <include layout="@layout/view_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/set_pw"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/color_333"/>
        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_input"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:hint="@string/single_input"
            android:textSize="@dimen/sp_14"
            android:padding="6dp"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/color_333"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/set_new_pw"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/color_333"/>
        <EditText
            android:id="@+id/et_new_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_input"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:hint="@string/single_input"
            android:textSize="@dimen/sp_14"
            android:padding="6dp"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/color_333"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/set_new_surepw"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/color_333"/>
        <EditText
            android:id="@+id/et_sure_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_input"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:hint="@string/single_input"
            android:textSize="@dimen/sp_14"
            android:padding="6dp"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/color_333"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_sure"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sure"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/color_333"
        android:paddingRight="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_14"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/login_code"/>


</LinearLayout>