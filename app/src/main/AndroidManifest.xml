<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.micropole.inventorysystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".App">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.personal.mine.NewsActivity"/>
        <activity android:name=".ui.personal.inventory.CategoryActivity"/>
        <activity android:name=".ui.personal.inventory.ColorManagerActivity"/>
        <activity android:name=".ui.personal.inventory.MaterialManagerActivity"/>
        <activity android:name=".ui.personal.inventory.MineCompanyActivity"/>
        <activity android:name=".ui.personal.inventory.FinanceActivity"/>
    </application>

</manifest>